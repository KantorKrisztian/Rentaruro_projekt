<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Fejléc -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AUTÓ"
                android:textColor="#F9A825"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KÖLCSÖNZŐ"
                android:background="#F9A825"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:padding="4dp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Navigációs sáv -->
        <LinearLayout
            android:id="@+id/navigation_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AUTÓINK"
                android:textSize="14sp"
                android:layout_marginHorizontal="8dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground" />

            <!-- INFORMÁCIÓK - lenyíló menü -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/info_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="INFORMÁCIÓK ▼"
                    android:textSize="14sp"
                    android:layout_marginHorizontal="8dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground" />

                <LinearLayout
                    android:id="@+id/info_dropdown"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:background="#FFFFFF"
                    android:elevation="4dp"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="GYIK" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Általános feltételek" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Biztosítás" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KAPCSOLAT"
                android:textSize="14sp"
                android:layout_marginHorizontal="8dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground" />

            <ImageView
                android:id="@+id/profile_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_myplaces"
                android:layout_marginHorizontal="8dp"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                />
        </LinearLayout>

        <!-- Autó kártyák -->
        <GridLayout
    android:id="@+id/gridCars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:useDefaultMargins="true"
            android:alignmentMode="alignMargins">

            <!-- Egy kártya -->
            <LinearLayout
                android:id="@+id/card_1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:background="#EEEEEE"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@android:drawable/ic_menu_gallery"
                    android:background="#CCCCCC" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Auto neve"
                    android:gravity="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ár"
                    android:gravity="center" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Több információ"
                    android:backgroundTint="#42A5F5" />
            </LinearLayout>
        </GridLayout>

        <!-- Lábléc -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kapcsolat\n+36-30-555-1234\ncim@valami.hu\nCsók utca 4.\n1234 Város"
            android:gravity="center"
            android:padding="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AUTÓ KÖLCSÖNZŐ"
            android:gravity="center"
            android:background="#F9A825"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:padding="8dp" />
    </LinearLayout>
</ScrollView>
